{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",

  // Strict: full bash sandbox with an explicit network allowlist.
  // Bash commands run in an isolated environment. Only the listed domains
  // can be reached over the network. Adjust allowedDomains for your stack.

  "sandbox": {
    "enabled": true,
    "autoAllowBashIfSandboxed": true,
    "network": {
      "allowedDomains": [
        "github.com",
        "api.github.com",
        "registry.npmjs.org",
        "registry.yarnpkg.com",
        "pypi.org",
        "files.pythonhosted.org"
      ]
    }
  },

  "permissions": {
    "deny": [
      "Bash(curl *)",
      "Bash(wget *)",
      "WebFetch",
      "WebSearch",
      "Read(./.env)",
      "Read(./.env.*)",
      "Read(./secrets/**)",
      "Read(~/.aws/**)",
      "Read(~/.ssh/**)",
      "Read(~/.config/**)",
      "Read(~/.gnupg/**)"
    ]
  }
}
