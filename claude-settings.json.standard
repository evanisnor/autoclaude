{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",

  // Standard: protect credentials and block outbound network tools.
  // Claude can still run most shell commands but cannot make arbitrary
  // network requests or read sensitive files.

  "permissions": {
    "deny": [
      "Bash(curl *)",
      "Bash(wget *)",
      "WebFetch",
      "WebSearch",
      "Read(./.env)",
      "Read(./.env.*)",
      "Read(./secrets/**)",
      "Read(~/.aws/**)",
      "Read(~/.ssh/**)"
    ]
  }
}
