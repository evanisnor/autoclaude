{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",

  // Minimal: only protect credential files.
  // Claude can still run arbitrary shell commands and make network requests.
  // Use this if you need maximum flexibility and trust your prompt fully.

  "permissions": {
    "deny": [
      "Read(./.env)",
      "Read(./.env.*)",
      "Read(./secrets/**)",
      "Read(~/.aws/**)",
      "Read(~/.ssh/**)"
    ]
  }
}
